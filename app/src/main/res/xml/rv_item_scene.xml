<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/star1"
               motion:framePosition="70"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/star2"
               motion:framePosition="80"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/star3"
               motion:framePosition="90"
               android:alpha="0" />
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/iv" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/star1"
            motion:layout_constraintEnd_toStartOf="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@+id/iv"
            android:alpha="0" />
        <Constraint
            android:id="@+id/star2"
            motion:layout_constraintEnd_toEndOf="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@+id/iv"
            motion:layout_constraintStart_toStartOf="@+id/iv"
            android:alpha="0" />
        <Constraint
            android:id="@+id/star3"
            motion:layout_constraintStart_toEndOf="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@+id/iv"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="231dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="229dp"
            android:id="@+id/iv"
            motion:layout_editor_absoluteX="37dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/titleTextView"
            motion:layout_constraintTop_toBottomOf="@+id/star1"
            motion:layout_constraintStart_toStartOf="@+id/iv" />
        <Constraint
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:id="@+id/contentTextView"
            motion:layout_constraintTop_toBottomOf="@+id/star3"
            motion:layout_constraintEnd_toEndOf="@+id/iv" />
    </ConstraintSet>
</MotionScene>